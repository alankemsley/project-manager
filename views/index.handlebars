<h1>Project Planner</h1>

{{!-- List 1: Projects not started --}}
<h2>Not Started</h2>

<ul>
  {{#each projects}}
    {{#unless this.in_progress || this.complete}}
      <li>
        {{this.project_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="in_progress" value="true">
          <button type="submit">Begin</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

{{!-- List 2: Projects in progress --}}
<h2>In Progress</h2>

<ul>
  {{#each projects}}
    {{#if this.in_progress}}
      <li>
        {{this.project_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="in_progress" value="false">
          <button type="submit">Done</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

{{!-- List 3: Projects completed --}}
<h2>Complete</h2>

<ul>
  {{#each projects}}
    {{#if this.complete}}
      <li>
        {{this.project_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

{{!-- Create new project --}}
<h2>Create New Project</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Project Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Create</button>
</form>
